<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %>
<body class="body-iteml">
	<!-- Header -->
	<%- include('../partials/header') %>
	<!-- /Header -->
	
	  
    <main class="home-m">
		<section class="products">
		<% if (result.length > 0) { %>
			<div class="col-12">
				<h2 class="products-title" style="color: white;">Resultados de la búsqueda: <%= busqueda %> </h2>
			</div>

			 
				<% result.forEach(product => { %>
			 
                    <div class="product">
                        <a href="/products/detail/<%- product.id %>">
                            <div class="productDiscount"><%- product.discount %>% OFF</div>
                            <img src="/images/productos/<%- product.images[0]?.image %>" alt="">
                            <p class="productName"> 
                                <% if (product.name.length > 30) { %>
                                    <%- `${product.name.slice(0,30)}...` %>
                                <% } else { %>
                                    <%= product.name %>
                                <% } %></p>
                            <h4 class="productPrice">$<%- product.price %></h4>
                        </a>
                    </div>
			
				<% }) %> 
              <% } else { %> 
				 <!-- CAROUSEL -->
				 <%- include('../partials/carousel') %>
				 <!-- END CAROUSEL -->
				
				<div class="col-12">
					<h1 class="products-title" style="color: white;">No hay productos que coincidan con esa búsqueda</h1>
				</div>
				<% } %> 

			</section>
				
			
     </main>
	
	

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>