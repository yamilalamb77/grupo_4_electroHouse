<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main class= "userProfile">
        <div class= "avatar">
            <img src="/images/userAvatars/<%=user.avatar %>" alt="">
        </div>
        
        <div class="userProfile-container">
            <div class="userProfile_box">
                <h3 class="userProfile_title">Datos Personales</h3>
                <p class="userProfile_item">Nombre: <%= user.name %></p>
                <p class="userProfile_item">Email: <%=user.email %></p>
                <p class="userProfile_item">Telefono: <%= user.tel ? user.tel : "------"%></p>
            </div>
            <div class="userProfile_box">
                <h3 class="userProfile_title">Datos de contacto</h3>
                <p class="userProfile_item">Direccion: <%= user.address ? user.address : "------" %></p>
                <p class="userProfile_item">Codigo Postal: <%=user.pc ? user.pc : "-------" %></p>
                <p class="userProfile_item">Provincia: <%= user.province ? user.province : "------"%></p>
                <p class="userProfile_item">Localidad: <%= user.city ? user.city : "------"%></p>
            </div>
            <a href="/users/editProfile/<%= user.id %>">Editar Perfil</a>
            <a href='/users/logout'>Salir</a>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>