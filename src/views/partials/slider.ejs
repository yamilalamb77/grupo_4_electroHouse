 <section class="special-offers">
    <marquee class="title" behavior="ALTERNATE">ENVIOS GRATIS</marquee>
    <h3 class="section__title"><%= titleSlider %> </h3>

    <!-- Product Slider -->

    <div class="gallery productSlider js-flickity" data-flickity-options='{ "wrapAround": true }'>
      <% productsSlider.forEach(product => { %>
        <div class="carousel-cell  productSlide">
         <!--<a href="products/detail/<%- product.id %>"></a>-->
            <div class="productDiscount"><%= product.discount %>% OFF</div>
            <img src="/images/productos/<%- product.image[0] %>" alt="">
            <p class="productName"> 
               <% if (product.name.length > 30) { %>
                   <%- `${product.name.slice(0,30)}...` %>
               <% } else { %>
                   <%= product.name %>
               <% } %></p>
            <h4 class="productPrice">$<%= product.price %></h4>
         <!--</a>-->
        </div>
        <% }) %>
    </div>
</section>
