<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/headAdmin') %>
<body>
    <%- include('../partials/headerAdmin') %>
    <div class="container-fluid">
        <div class="row">
    <%- include('../partials/adminSidebar') %>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2"> Lista de usuarios:</h1>
          <a class="btn btn-primary" href='/admin/userList/create'>Crear Usuario</a>
    

    </div>
    
    
    <div class="table-responsive">
    <% usuarios.forEach(user => { %>
        <p> id: <%- user.id %> </p>
        <p>rol: <%- user.rol %> </p>      
        <p>Nombre: <%- user.name %> </p>
        <p>Apellido: <%- user.last_name %> </p>
        <p>Email: <%- user.email %> </p>
        <p>Número de telefono: <%- user.tel %> </p>
        <p>Dirección: <%- user.address %> </p>
        <p>Codigo Postal: <%- user.pc %> </p>
        <p>Provincia: <%- user.province %> </p>
        <p>Ciudad: <%- user.city %> </p> 
        <a class="btn btn-primary" href='/admin/userList/edit/<%- user.id %> '>Editar Usuario</a>       
        <p>--------------------</p>
        
        <% })%>
        </div>
        </div>
        </div>
        </main>
        <%- include('../partials/adminScripts') %>
        
</body>
</html>