
    <!DOCTYPE html>
    <html lang="en">
        <%- include('../../partials/headAdmin') %>
    <body>
        <%- include('../../partials/headerAdmin') %>
        
        <div class="container" style="max-width: 700px;">
          <div class="row">
            <%- include('../../partials/adminSidebar') %>
            <form class="row g-3" action="/admin/subcategories/edit/<%= Subcategories.id %>?_method=PUT" method="POST">
                
                <div class="col-12">
                    <label for="inputName" class="form-label" >Nombre</label>
                    <input type="text" class="form-control" id="inputName" name="name" value="<%= locals.old ? old.name : Subcategories.name %>">
                    <% if (locals.errors && errors.name) { %>
                        <small class="text-danger"><%= errors.name.msg %></small>
                    <% } %>
                </div>
    
                <div class="col-12">
                    <select class="form-select categorySelect" id="specificSizeSelect" name="categoryId">
                      <option selected hidden value="">Categorias</option>
                     <% locals.Category.forEach(categorie => { %>
                        <option value="<%- categorie.id %>" <%- locals.old && old.categorie == categorie.id ? "selected" : categorie.id == Subcategories.categoriesId ? "selected" : "" %>><%- categorie.name %></option>
                     <% }) %>
                    </select>
                    <% if (locals.errors && errors.categorie) { %>
                        <small class="text-danger"><%= errors.categorie.msg %></small>
                    <% } %>
                </div>
                <button type="submit" class="btn btn-primary">
                    CREAR
                </button>
            </form>
          </div>
        </div>
        <%- include('../../partials/adminScripts') %>
        <script src="/javascripts/adminCategories.js"></script>
        </body>
    </html>