<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head') %> 
<body class="body-iteml">
    <%- include('./partials/header') %> 
    <main class="home-m">
      
        <div class="subcategories_menu-mobile">
            <div id="mySidepanel" class="sidepanel">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <% subCategories.forEach(subCategory => { %>
                    <a class="botonSub" href="#"><%- subCategory %></a>
                <% }) %>    
            </div>
              
            <button class="openbtnl" onclick="openNav()">Subcategorias</button>
        </div>
        <div class="container products-container">
            <aside class="subcategories_menu-desktop">
                <% subCategories.forEach(subCategory => { %>
                    <a class="botonSub" href="#"><%- subCategory %></a>
                <% }) %>   
            </aside>
            <section class="products">
                <% products.forEach(product => { %>
                    <div class="product">
                        <a href="/products/detail/<%- product.id %>">
                            <div class="productDiscount"><%- product.discount !== 0 ? `${product.discount}% OFF` : "" %></div>
                            <img src="/images/productos/<%- product.image[0] %>" alt="">
                            <p class="productName"> 
                                <% if (product.name.length > 30) { %>
                                    <%- `${product.name.slice(0,30)}...` %>
                                <% } else { %>
                                    <%= product.name %>
                                <% } %></p>
                            <h4 class="productPrice">$<%- toThousand(product.price - product.price * product.discount / 100)%></h4>
                            
                        </a>
                    </div>
                <% }) %> 
            </section>
        </div>
    </main>
    <%- include('./partials/footer.ejs')%>
    <script src="/js/categoriesIdePanel.js"></script>
</body>
</html>